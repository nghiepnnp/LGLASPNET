@using PagedList.Mvc;
@model PagedList.IPagedList<WebsiteBanMayAnh.Models.modelProduct>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<section class="container">


    <ul class="b-crumbs">
        <li>
            <a href="/">
                Trang Chủ
            </a>
        </li>
        <li>
            <a href="#">
                Search
            </a>
        </li>

    </ul>
    <h1 class="main-ttl"><span>Search</span></h1>
    <!-- Catalog Sidebar - start -->
    <div class="section-sb">
       
        <!-- Filter - start -->
        <div class="section-filter">
            <button id="section-filter-toggle" class="section-filter-toggle" data-close="Hide Filter" data-open="Show Filter">
                <span>Công cụ</span> <i class="fa fa-angle-down"></i>
            </button>
            <div class="section-filter-cont">
                <div class="section-filter-price">
                    <div class="range-slider section-filter-price" data-min="0" data-max="80000000" data-from="1500000" data-to="65000000" data-prefix="đ" data-grid="false"></div>
                </div>

                <input class="btn btn-themes" id="set_filter" name="set_filter" value="Áp dụng bộ lọc" type="button">
                <input class="btn btn-link" id="del_filter" name="del_filter" value="Đặt lại" type="button">
            </div>
        </div>
    </div>
    <!-- Filter - end -->
    <!-- Catalog Sidebar - end -->
    <!-- Catalog Items | Gallery V1 - start -->
    <div class="section-cont">

        <!-- Catalog Topbar - start -->
        <div class="section-top">
            <!-- Sorting -->
            <div class="section-sortby">
                <p>Sắp xếp</p>
                <ul>
                    <li>
                        <a href="#">Mới nhất</a>
                    </li>
                    <li>
                        <a href="#">Giá tăng dần</a>
                    </li>
                    <li>
                        <a href="#">Giá giảm dần</a>
                    </li>
                    <li>
                        <a href="#">Từ A <i class="fa fa-angle-right"></i> Z</a>
                    </li>
                    <li>
                        <a href="#">Từ Z <i class="fa fa-angle-right"></i> A</a>
                    </li>

                </ul>
            </div>

            <!-- Count per page -->
            <div class="section-count">
                <p>12</p>
                <ul>
                    <li><a href="#">12</a></li>
                    <li><a href="#">24</a></li>
                    <li><a href="#">48</a></li>
                </ul>
            </div>

        </div>
        <!-- Catalog Topbar - end -->
        <div class="prod-items section-items">
            @foreach (var row in Model)
            {
                <div class="prod-i">
                    <div class="prod-i-top">
                        <a href="~/@row.Slug" class="prod-i-img" target="_blank"><!-- NO SPACE --><img src="~/Public/user/img/products/@row.Img" alt="Nulla numquam obcaecati"><!-- NO SPACE --></a>
                        <p class="prod-i-info">
                            <a href="#" class="prod-i-favorites"><span>Yêu thích</span><i class="fa fa-heart"></i></a>
                            <a href="~/@row.Slug" class="prod-i-favorites" target="_blank"><span>Chi tiết sản phẩm</span><i class="fa fa-search"></i></a>
                            <a class="prod-i-compare" href="#"><span>So sánh giá</span><i class="fa fa-bar-chart"></i></a>
                        </p>
                        <a href="#" class="prod-i-buy">Thêm vào giỏ</a>
                        <p class="prod-i-properties-label"><i class="fa fa-info"></i></p>

                        <div class="prod-i-properties">
                            @{
                                foreach (var i in row.Detail.Split(new[] { '\n' }))
                                {
                                    <small class="text-dark"> @i</small><br>

                                }
                            }
                        </div>
                    </div>
                    <h3>
                        <a href="~/@row.Slug">@row.Name</a>
                    </h3>
                    <p class="prod-i-price">
                        <b>@String.Format("{0:0,0₫}", @row.Price_sale)</b>
                    </p>
                    <p class="prod-i-price">
                        <del class="price" style="color:red">@String.Format("{0:0,0₫}", @row.Price)</del>
                    </p>
                </div>

                                }


        </div>

        <!-- Pagination - start -->
        <ul class="pagi">
            @Html.PagedListPager(Model, page => Url.Action("Product", new { page }))
        </ul>
        <!-- Pagination - end -->
    </div>
    <!-- Catalog Items | Gallery V1 - end -->


</section>
