@model IEnumerable<WebsiteBanMayAnh.Models.modelCategory>

@Html.Partial("_PartialModelCategory")
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Cấp cha</th>
                                    <th>Ngày tạo</th>
                                    <th>Link</th>
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{ int stt = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @stt
                                            </td>
                                            <td class="name">
                                                <a href="@Url.Action("Details", "Category", new { Id = item.Id })">@item.Name</a>
                                                <span hidden>@Html.DisplayFor(modelItem => item.Id)</span>
                                            </td>
                                            <td class="category">
                                                @Html.DisplayFor(modelItem => item.Category.Name)
                                                <span hidden>@Html.DisplayFor(modelItem => item.ParentId)</span>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created_at)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Slug)
                                            </td>
                                            <td>
                                                @if (item.Status == 1)
                                                {
                                                    <div class="btn btn-success btn-sm btn-toggle-status" data-id="@Html.DisplayFor(modelItem => item.Id)" data-status="@Html.DisplayFor(modelItem => item.Status)" title="Hiện"><i class="fa fa-toggle-on"></i></div>
                                                }
                                                else
                                                {
                                                    <div class="btn btn-secondary btn-sm btn-toggle-status" data-id="@Html.DisplayFor(modelItem => item.Id)" data-status="@Html.DisplayFor(modelItem => item.Status)" title="Ẩn"><i class="fa fa-toggle-off"></i></div>
                                                }
                                                <div class="btn btn-secondary btn-sm btn-update" title="Sửa"><i class="fa fa-edit"></i></div>
                                                <div class="btn btn-dark btn-sm btn-delTrash" title="Xóa" data-id="@Html.DisplayFor(modelItem => item.Id)"><i class="fa fa-trash"></i></div>
                                            </td>

                                        </tr>
                                        stt++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    // Chuyển sang thùng rác
    $('.btn-delTrash').click(function () {
        var $id = $(this).data('id');
        swal({
            title: "Xóa thật hả, cần thì vô thùng rác kiếm lại nhé!?",
            text: "Bạn chắc chắn xóa mẫu tin này chứ !",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Đúng, hãy xóa!",
            cancelButtonText: "Không, giữ lại!",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {

                    $.ajax({
                        url: "Category/UpdateStatus",
                        type: 'POST',
                        data: {
                            Id: $id,
                            eStatus: 'IsTrash'
                        },
                        dataType: 'json',
                        success: function (response) {

                            if (response == 0) {
                                swal("Xóa!", "Mẫu tin đã xóa thành công.", "success");
                                getListByFilter()
                            }
                            else {
                                swal("Error", "System error", "error");
                            }
                        }
                    })
                } else {
                    swal("Không xóa", "Mẫu tin vẫn còn trong CSDL", "error");
                }
            });
    });

    // Thay đổi trạng thái
    $('.btn-toggle-status').click(function () {
        var $id = $(this).data('id');
        var $eStatus = $(this).data('status') == 1 ? 'Hidden' : 'Active';
        $.ajax({
            url: "Category/UpdateStatus",
            type: 'POST',
            data: {
                Id: $id,
                eStatus: $eStatus
            },
            dataType: 'json',
            success: function (response) {
                if (response == 0) {
                    swal("Success!", "Đã cập nhật lại trạng thái.", "success");
                    getListByFilter()
                }
                else {
                    swal("Error", "System error", "error");
                }

            }
        })
    });

    $(".btn-update").click(function () {

        var closest = $(this).closest("tr")
        $('#CategoryName').val(closest.find(".name a").html())
        if (closest.find(".category span").html() != '') {
            $('#SelectParent').val(closest.find(".category span").html())
        }
        $('#Id').val(closest.find(".name span").html())
        $('#modal-title').text('CẬP NHẬT DANH MỤC')

        $('#myModal5').modal('show');
    })


    $(function () {
        $('.dataTables-example').DataTable({
            pageLength: 25,
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]

        });
    })

    $('#myModal5').on('hidden.bs.modal', function (e) {
        $('#Id').val('0')
        $('input').val('')
        $('#SelectParent').val($("#SelectParent option:first").val())
        $('#modal-title').text('THÊM MỚI DANH MỤC')
    })
</script>