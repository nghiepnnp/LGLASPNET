@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-md-9">
            <h2>Danh mục sản phẩm</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Trang chủ</a>
                </li>

                <li class="breadcrumb-item active">
                    <strong>Danh mục sản phẩm</strong>
                </li>
            </ol>
        </div>
        <div class="col-md-3">
            <br /><br />

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5">
                <i class="fa fa-plus-square">Thêm mới</i>
            </button>
            <a href="@Url.Action("Trash","Category")" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Thùng rác (@ViewBag.demrac)</a>
        </div>
    </div>
    <div id="content"></div>
</div>

<script>
    $().ready(getListByFilter);
    function getListByFilter() {
        $.get("@Url.Action("GetListCategory", "Category")", (result, status) => $("#content").html(result));
    }
</script>
