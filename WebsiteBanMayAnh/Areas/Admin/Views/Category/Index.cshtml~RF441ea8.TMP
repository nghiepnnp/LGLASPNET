@model IEnumerable<WebsiteBanMayAnh.Models.modelCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-md-9">
            <h2>Danh mục sản phẩm</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Trang chủ</a>
                </li>

                <li class="breadcrumb-item active">
                    <strong>Danh mục sản phẩm</strong>
                </li>
            </ol>
        </div>
        <div class="col-md-3">
            <br /><br />
            <a href="@Url.Action("Create","Category")" class="btn btn-sm btn-success"><i class="fa fa-plus-square"> </i> Thêm mới</a>
            <a href="@Url.Action("Trash","Category")" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Thùng rác (@ViewBag.demrac)</a>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">

                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" class="dropdown-item">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Cấp cha</th>
                                        <th>Ngày tạo</th>
                                        <th>Link</th>
                                        <th>Công cụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details","Category", new {Id = item.Id })">@item.Name</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParentId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Updated_at)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Slug)
                                            </td>
                                            <td>
                                                @if (item.Status == 1)
                                                {
                                                    <a href="@Url.Action("Status","Category",new {id = item.Id })" class="btn btn-success btn-sm" title="Hiện"><i class="fas fa-toggle-on"></i></a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Status","Category",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Ẩn"><i class="fas fa-toggle-off"></i></a>
                                                }
                                                <a href="@Url.Action("Edit","Category",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Sửa"><i class="fas fa-edit"></i></a>
                                                <a href="@Url.Action("delTrash","Category",new {id = item.Id })" class="btn btn-dark btn-sm" title="Xóa"><i class="far fa-trash-alt"></i></a>
                                            </td>

                                        </tr>

                                    }
                                </tbody>
                                </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>






    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Quản lý danh mục</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Categories</a></li>
                            <li class="breadcrumb-item active">Danh sách</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                                Categories
                            </div>
                            <div class="col-4">
                                <div class="float-right pt-1">
                                    <a href="@Url.Action("Create","Category")" class="btn btn-sm btn-success"><i class="fa fa-plus-square"> </i> Thêm mới</a>
                                    <a href="@Url.Action("Trash","Category")" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Thùng rác (@ViewBag.demrac)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card">
                        @Html.Partial("_Message")
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Cấp cha</th>
                                    <th>Ngày tạo</th>
                                    <th>Link</th>
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Category", new {Id = item.Id })">@item.Name</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ParentId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Updated_at)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Slug)
                                        </td>
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <a href="@Url.Action("Status","Category",new {id = item.Id })" class="btn btn-success btn-sm" title="Hiện"><i class="fas fa-toggle-on"></i></a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status","Category",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Ẩn"><i class="fas fa-toggle-off"></i></a>
                                            }
                                            <a href="@Url.Action("Edit","Category",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Sửa"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("delTrash","Category",new {id = item.Id })" class="btn btn-dark btn-sm" title="Xóa"><i class="far fa-trash-alt"></i></a>
                                        </td>

                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>

