@model IEnumerable<WebsiteBanMayAnh.Models.modelMenu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/Menu/Index">Menu</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                            </div>
                            <div class="col-4">
                                <div class="float-right pt-1">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        <a href="~/Admin/Menu/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp;Thêm mới</a>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm">
                                        <a href="~/Admin/Menu/Trash" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thùng rác (@ViewBag.demrac)</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th> ID</th>
                                    <th> Tên</th>
                                    <th> Liên kết</th>
                                    <th> Cấp cha</th>
                                    <th> Ngày tạo</th>
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Menu", new {Id = item.Id })">@item.Name</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Link)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TableId)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created_at)
                                        </td>
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <a href="@Url.Action("Status","Menu",new {id = item.Id })" class="btn btn-success btn-sm" title="Hiện"><i class="fas fa-toggle-on"></i></a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status","Menu",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Ẩn"><i class="fas fa-toggle-off"></i></a>
                                            }
                                            <a href="@Url.Action("Edit","Menu",new {id = item.Id })" class="btn btn-secondary btn-sm" title="Sửa"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("delTrash","Menu",new {id = item.Id })" class="btn btn-dark btn-sm" title="Xóa"><i class="far fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                          }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>