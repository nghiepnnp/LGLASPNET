@model IEnumerable<WebsiteBanMayAnh.Models.modelPost>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý Trang đơn</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/Page">Trang đơn</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">
                                Trang đơn
                            </div>
                            <div class="col-4">
                                <div class="float-right pt-1">
                                    <p type="button" class="btn btn-primary btn-sm">
                                        <a href="~/Admin/Page/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp;Thêm mới</a>
                                    </p>
                                    <p type="button" class="btn btn-danger btn-sm">
                                        <a href="~/Admin/Page/Trash" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thùng rác (@ViewBag.demrac)</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="no-sort">ID</th>
                                    <th class="no-sort">Tên trang đơn</th>
                                    <th class="no-sort">Liên kết</th>
                                    @*<th class="no-sort">Hình</th>*@
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Page", new {Id = item.Id })">@item.Title</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Slug)
                                        </td>
                                        @*<td>
                                            <img src="~/Public/user/img/page/@Html.DisplayFor(modelItem => item.Img)" width="100" />
                                        </td>*@
                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <p type="button" class="btn btn-success btn-sm" title="On"><a class="text-white" href="~/Admin/Page/Status/@item.Id"><i class="fas fa-toggle-on"></i></a></p>
                                            }
                                            else
                                            {
                                                <p type="button" class="btn btn-secondary btn-sm" title="Off"><a class="text-white" href="~/Admin/Page/Status/@item.Id"><i class="fas fa-toggle-off"></i></a></p>
                                            }
                                            <p type="button" class="btn btn-secondary btn-sm"><a class="text-white" href="~/Admin/Page/Edit/@Html.DisplayFor(modelItem => item.Id)"><i class="fas fa-edit"></i></a></p>
                                            <p type="button" class="btn btn-dark btn-sm"><a class="text-white d-block" href="~/Admin/Page/delTrash/@Html.DisplayFor(modelItem => item.Id)"><i class="far fa-trash-alt"></i></a></p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>