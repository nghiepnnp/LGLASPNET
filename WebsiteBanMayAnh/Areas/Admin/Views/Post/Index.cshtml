@model IEnumerable<WebsiteBanMayAnh.PostTopic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý Post</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/Post">Post</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8">

                            </div>
                            <div class="col-4">
                                <div class="float-right pt-1">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        <a href="~/Admin/Post/Create" class="text-white"><i class="fas fa-plus fa-xs"></i>&nbsp;Thêm mới</a>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm">
                                        <a href="~/Admin/Post/Trash" class="text-white"><i class="far fa-trash-alt fa-xs"></i>&nbsp; Thùng rác (@ViewBag.demrac)</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Tên bài viết
                                    </th>
                                    <th>
                                       Cấp cha
                                    </th>
                                    <th>
                                        Hình
                                    </th>
                                    <th>Công cụ</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model)
                               {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostId)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details","Post", new {Id = item.PostId })">@item.PostName</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TopicName)
                                    </td>
                                    <td>
                                        <img src="~/Public/user/img/post/@Html.DisplayFor(modelItem => item.PostImg)" width="100" />
                                    </td>
                                    <td>
                                        @if (item.PostStatus == 1)
                                        {
                                            <p type="button" class="btn btn-success btn-sm" title="On"><a class="text-white" href="~/Admin/Post/Status/@item.PostId"><i class="fas fa-toggle-on"></i></a></p>
                                        }
                                        else
                                        {
                                            <p type="button" class="btn btn-secondary btn-sm" title="Off"><a class="text-white" href="~/Admin/Post/Status/@item.PostId"><i class="fas fa-toggle-off"></i></a></p>
                                        }
                                        <p type="button" class="btn btn-secondary btn-sm"><a class="text-white" href="~/Admin/Post/Edit/@Html.DisplayFor(modelItem => item.PostId)"><i class="fas fa-edit"></i></a></p>
                                        <p type="button" class="btn btn-dark btn-sm"><a class="text-white d-block" href="~/Admin/Post/delTrash/@Html.DisplayFor(modelItem => item.PostId)"><i class="far fa-trash-alt"></i></a></p>
                                    </td>
                                </tr>
                               }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


